generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String   @unique
  userIds String[]
}

model Todo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  isCompleted Boolean
  isPinned    Boolean
  priority    BigInt
  title       String
  updatedAt   DateTime @db.Date
  userId      String   @db.ObjectId
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  roleIds String[]
}
